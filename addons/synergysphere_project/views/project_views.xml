<odoo>
    <record id="view_synergy_project_form" model="ir.ui.view">
        <field name="name">synergy.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="synergy_progress" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_synergy_project_list" model="ir.ui.view">
        <field name="name">synergy.project.list</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="synergy_progress"/>
            </xpath>
        </field>
    </record>

    <record id="action_synergy_projects" model="ir.actions.act_window">
        <field name="name">Synergy Projects</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
